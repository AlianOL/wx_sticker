/* pages/gif/gif.wxss */

page {
  background-color: #ddd;
}

.gif-constainer {
  width: 150rpx;
  height: 150rpx;
}

.back-container {
  width: 750rpx;
  height: 750rpx;
  background-color: #888;
}

.bottom-container {
  height: 500rpx;
}

.image-container {
  width: 100rpx;
  height: 100rpx;
}

.image.cancel {
  position: absolute;
  top: -15rpx;
  left: -15rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 30;
}

.touchWrap {
  transform-origin: center;
  position: absolute;
  z-index: 100;
  width: 200rpx;
  height: 200rpx;
}

.imgWrap {
  box-sizing: border-box;
  width: 100%;
  transform-origin: center;
  float: left;
  border: 5rpx transparent dashed;
}

.x {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 30;
}

.o {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 30;
}

.recommend_scroll_x_box {
  position: relative;
  display: flex;
  flex-direction: row;
  background-color: #987;
  height: 150rpx;
  /* padding-top: 30rpx;
  padding-bottom: 40rpx; */
  width: 100%;
  overflow: auto;
  white-space: nowrap;
  /* display: flex; */
  vertical-align: top;
}

.sticker-lists image {
  width: 100rpx;
  height: 100rpx;
}

.sticker-lists {
  margin: 20rpx 20rpx 20rpx 20rpx;
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  align-items: center;
  align-content: center;
  align-self: center;
}
